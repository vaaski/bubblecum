{
  "name": "Github Light Theme",
  "type": "light",
  "colors": {
    // base color
    "focusBorder": "#f0f0f000",
    "foreground": "#000000",
    "editor.background": "#EFF0F0",
    "editor.foreground": "#000000",
    "scrollbar.shadow": "#EFF0F0",
    // activity bar
    "activityBar.border": "#EFF0F0",
    "activityBar.background": "#EFF0F0",
    "activityBar.foreground": "#000000",
    "activityBarBadge.background": "#D73C7D",
    // status bar
    "statusBar.border": "#EFF0F0",
    "statusBar.background": "#EFF0F0",
    "statusBar.foreground": "#000000",
    "statusBar.noFolderBackground": "#EFF0F0",
    "statusBar.noFolderForeground": "#000000",
    "statusBar.debuggingBackground": "#EFF0F0",
    "statusBar.debuggingForeground": "#000000",
    // editor groups and tabs
    "editorGroup.border": "#EFF0F0",
    "editorGroupHeader.tabsBackground": "#EFF0F0",
    "editorGroupHeader.noTabsBackground": "#EFF0F0",
    "editorGroupHeader.tabsBorder": "#EFF0F0",
    "tab.activeBackground": "#EFF0F0",
    "tab.inactiveBackground": "#EFF0F0",
    "tab.border": "#EFF0F0",
    "tab.activeBorder": "#D73C7D",
    // side bars
    "sideBar.border": "#EFF0F0",
    "sideBar.background": "#EFF0F0",
    "sideBar.foreground": "#000000",
    "sideBarSectionHeader.background": "#EFF0F0",
    // list
    "list.highlightForeground": "#D73C7D",
    "list.activeSelectionBackground": "#dfdfdf",
    "list.activeSelectionForeground": "#D73C7D",
    "list.inactiveSelectionBackground": "#dfdfdf",
    "list.inactiveSelectionForeground": "#D73C7D",
    "list.hoverBackground": "#dfdfdf",
    "list.hoverForeground": "#D73C7D",
    "list.focusBackground": "#dfdfdf",
    "list.focusForeground": "#D73C7D",
    // editor
    "editor.lineHighlightBackground": "#f0ecd0",
    "editor.lineHighlightBorder": "#f0ecd0",
    "editorLineNumber.foreground": "#babbbc",
    "editorLineNumber.activeForeground": "#000000",
    "editor.selectionBackground": "#fed442",
    // input
    "input.border": "#b2b2b2",
    "input.background": "#EFF0F0",
    "inputOption.activeBorder": "#000000",
    "inputOption.activeForeground": "#000000",
    "dropdown.border": "#b2b2b2",
    "dropdown.background": "#EFF0F0",
    "dropdown.listBackground": "#EFF0F0",
    // notification
    "notificationCenter.border": "#EFF0F0",
    "notificationCenterHeader.background": "#EFF0F0",
    "notificationToast.border": "#EFF0F0",
    "notifications.background": "#EFF0F0",
    "notifications.border": "#EFF0F0",
    // button
    "button.background": "#D73C7D",
    "button.foreground": "#EFF0F0",
    // titlebar
    "titleBar.border": "#EFF0F0",
    "titleBar.activeBackground": "#EFF0F0",
    "titleBar.activeForeground": "#000000",
    "titleBar.inactiveBackground": "#EFF0F0",
    "titleBar.inactiveForeground": "#000000",
    // editor widget
    "editorWidget.background": "#EFF0F0",
    "editorWidget.border": "#000000",
    "editorSuggestWidget.highlightForeground": "#D73C7D",
    "editorSuggestWidget.selectedBackground": "#e1e1e1",
    // panel
    "panel.border": "#D73C7D"
  },
  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment", "string.comment"],
      "settings": {
        "foreground": "#6a737d"
      },
      "name": "Comment"
    },
    {
      "scope": ["constant", "entity.name.constant", "variable.other.constant", "variable.language"],
      "settings": {
        "foreground": "#008BC7"
      },
      "name": "Constant"
    },
    {
      "scope": ["keyword.operator.symbole", "keyword.other.mark"],
      "name": "Clojure workaround; don't highlight these separately from their enclosing scope",
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "scope": ["entity", "entity.name"],
      "settings": {
        "foreground": "#6f42c1"
      },
      "name": "Entity"
    },
    {
      "scope": ["variable.parameter.function"],
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "scope": ["entity.name.tag"],
      "settings": {
        "foreground": "#227687"
      }
    },
    {
      "scope": ["keyword"],
      "settings": {
        "foreground": "#D73C7D"
      },
      "name": "Keyword"
    },
    {
      "scope": ["storage", "storage.type"],
      "settings": {
        "foreground": "#D73C7D"
      },
      "name": "Storage"
    },
    {
      "scope": ["storage.modifier.package", "storage.modifier.import", "storage.type.java"],
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "scope": [
        "string",
        "punctuation.definition.string",
        "string punctuation.section.embedded source"
      ],
      "settings": {
        "foreground": "#032f62"
      },
      "name": "String"
    },
    {
      "name": "Ada workaround; don't highlight imports as strings",
      "scope": ["string.unquoted.import.ada"],
      "settings": {}
    },
    {
      "scope": ["support"],
      "settings": {
        "foreground": "#008BC7"
      },
      "name": "Support"
    },
    {
      "scope": ["meta.property-name"],
      "settings": {
        "foreground": "#008BC7"
      }
    },
    {
      "scope": ["variable"],
      "settings": {
        "foreground": "#E378AC"
      },
      "name": "Variable"
    },
    {
      "scope": ["variable.other"],
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "scope": ["invalid.broken"],
      "settings": {
        "fontStyle": "bold italic underline",
        "foreground": "#b31d28"
      },
      "name": "Invalid - Broken"
    },
    {
      "scope": ["invalid.deprecated"],
      "settings": {
        "fontStyle": "bold italic underline",
        "foreground": "#b31d28"
      },
      "name": "Invalid – Deprecated"
    },
    {
      "scope": ["invalid.illegal"],
      "settings": {
        "fontStyle": "italic underline",
        "foreground": "#b31d28"
      },
      "name": "Invalid – Illegal"
    },
    {
      "scope": ["carriage-return"],
      "settings": {
        "fontStyle": "italic underline",
        "foreground": "#D73C7D"
      },
      "name": "Carriage Return"
    },
    {
      "scope": ["invalid.unimplemented"],
      "settings": {
        "fontStyle": "bold italic underline",
        "foreground": "#b31d28"
      },
      "name": "Invalid - Unimplemented"
    },
    {
      "scope": ["message.error"],
      "settings": {
        "foreground": "#b31d28"
      }
    },
    {
      "scope": ["string source"],
      "settings": {
        "foreground": "#000000"
      },
      "name": "String embedded-source"
    },
    {
      "scope": ["string variable"],
      "settings": {
        "foreground": "#008BC7"
      },
      "name": "String variable"
    },
    {
      "scope": ["source.regexp", "string.regexp"],
      "settings": {
        "foreground": "#032f62"
      },
      "name": "String.regexp"
    },
    {
      "scope": [
        "string.regexp.character-class",
        "string.regexp constant.character.escape",
        "string.regexp source.ruby.embedded",
        "string.regexp string.regexp.arbitrary-repitition"
      ],
      "settings": {
        "foreground": "#032f62"
      },
      "name": "String.regexp.special"
    },
    {
      "scope": ["string.regexp constant.character.escape"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#227687"
      },
      "name": "String.regexp constant.character.escape"
    },
    {
      "scope": ["support.constant"],
      "settings": {
        "foreground": "#008BC7"
      },
      "name": "Support.constant"
    },
    {
      "scope": ["support.variable"],
      "settings": {
        "foreground": "#008BC7"
      },
      "name": "Support.variable"
    },
    {
      "scope": ["meta.module-reference"],
      "settings": {
        "foreground": "#008BC7"
      },
      "name": "meta module-reference"
    },
    {
      "scope": ["markup.list"],
      "settings": {
        "foreground": "#735c0f"
      },
      "name": "Markup.list"
    },
    {
      "scope": ["markup.heading", "markup.heading entity.name"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#008BC7"
      },
      "name": "Markup.heading"
    },
    {
      "scope": ["markup.quote"],
      "settings": {
        "foreground": "#227687"
      },
      "name": "Markup.quote"
    },
    {
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#000000"
      },
      "name": "Markup.italic"
    },
    {
      "scope": ["markup.bold"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#000000"
      },
      "name": "Markup.bold"
    },
    {
      "scope": ["markup.raw"],
      "settings": {
        "foreground": "#008BC7"
      },
      "name": "Markup.raw"
    },
    {
      "scope": ["markup.deleted", "meta.diff.header.from-file", "punctuation.definition.deleted"],
      "settings": {
        "foreground": "#b31d28"
      },
      "name": "Markup.deleted"
    },
    {
      "scope": ["markup.inserted", "meta.diff.header.to-file", "punctuation.definition.inserted"],
      "settings": {
        "foreground": "#227687"
      },
      "name": "Markup.inserted"
    },
    {
      "scope": ["markup.changed", "punctuation.definition.changed"],
      "settings": {
        "foreground": "#E378AC"
      }
    },
    {
      "scope": ["markup.ignored", "markup.untracked"],
      "settings": {
        "foreground": "#008BC7"
      }
    },
    {
      "scope": ["meta.diff.range"],
      "settings": {
        "foreground": "#6f42c1",
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["meta.diff.header"],
      "settings": {
        "foreground": "#008BC7"
      }
    },
    {
      "scope": ["meta.separator"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#008BC7"
      },
      "name": "Meta.separator"
    },
    {
      "name": "Output",
      "scope": ["meta.output"],
      "settings": {
        "foreground": "#008BC7"
      }
    },
    {
      "scope": [
        "brackethighlighter.tag",
        "brackethighlighter.curly",
        "brackethighlighter.round",
        "brackethighlighter.square",
        "brackethighlighter.angle",
        "brackethighlighter.quote"
      ],
      "settings": {
        "foreground": "#586069"
      }
    },
    {
      "scope": ["brackethighlighter.unmatched"],
      "settings": {
        "foreground": "#b31d28"
      }
    },
    {
      "scope": ["sublimelinter.mark.error"],
      "settings": {
        "foreground": "#b31d28"
      }
    },
    {
      "scope": ["sublimelinter.mark.warning"],
      "settings": {
        "foreground": "#E378AC"
      }
    },
    {
      "scope": ["sublimelinter.gutter-mark"],
      "settings": {
        "foreground": "#959da5"
      }
    },
    {
      "scope": ["constant.other.reference.link", "string.other.link"],
      "settings": {
        "foreground": "#032f62",
        "fontStyle": "underline"
      }
    },
    {
      "scope": ["meta.function-call support.function", "meta.function-call entity.name.function"],
      "settings": {
        "foreground": "#008BC7"
      }
    },
    {
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#000000"
      }
    }
  ]
}
